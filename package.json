{
  "publisher": "standard-crypto",
  "name": "axiom-crypto",
  "displayName": "Axiom Crypto",
  "description": "Support for projects built with Axiom, the ZK Coprocessor for Ethereum (https://axiom.xyz)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "id": "axiom",
        "title": "Axiom",
        "properties": {
          "axiom.providerURI": {
            "type": "string",
            "description": "Provider URI",
            "editPresentation": "singlelineText"
          },
          "axiom.privateKey": {
            "type": "string",
            "description": "Private Key",
            "editPresentation": "singlelineText"
          },
          "axiom.circuitFilesPattern": {
            "type": "string",
            "description": "Glob pattern to used to automatically discover files containing circuit definitions",
            "default": "**/axiom/**/*.ts"
          },
          "axiom.circuitInputsProvided": {
            "type": "string",
            "enum": [
              "As exported typescript constants",
              "As separate input files"
            ],
            "default": "As separate input files"
          },
          "axiom.buildDirectory": {
            "type": "string",
            "default": "build/axiom",
            "description": "Path where circuit outputs from compiled circuits will be written"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "axiom-crypto.add-query",
        "title": "Add Query",
        "icon": "$(plus)"
      },
      {
        "command": "axiom-crypto.rename-query",
        "title": "Rename Query",
        "icon": "$(pencil)"
      },
      {
        "command": "axiom-crypto.delete-query",
        "title": "Delete Query",
        "icon": "$(trash)"
      },
      {
        "command": "axiom-crypto.update-query-input",
        "title": "Select the JSON file containing this query's inputs",
        "icon": "$(file-add)"
      },
      {
        "command": "axiom-crypto.update-query-callback",
        "title": "Update Query Callback Address",
        "icon": "$(pencil)"
      },
      {
        "command": "axiom-crypto.update-query-refund",
        "title": "Update Query Refund Address",
        "icon": "$(pencil)"
      },
      {
        "command": "axiom-crypto.update-circuit-default-input",
        "title": "Update Circuit Default Input",
        "icon": "$(file-add)"
      },
      {
        "command": "axiom-crypto.compile",
        "title": "Compile Circuit",
        "icon": "$(circuit-board)"
      },
      {
        "command": "axiom-crypto.compile-all",
        "title": "Compile All Circuits",
        "icon": "$(circuit-board)"
      },
      {
        "command": "axiom-crypto.send-query",
        "title": "Send Axiom Query",
        "icon": "$(rocket)"
      },
      {
        "command": "axiom-crypto.show-circuit-source",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "axiom-crypto.show-default-input-source",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "axiom-crypto.show-input-source",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "axiom-crypto.run",
        "title": "Run Circuit",
        "icon": "$(run)"
      },
      {
        "command": "axiom-crypto.configure-parameters",
        "title": "Configure Parameters",
        "icon": "$(gear)"
      },
      {
        "command": "axiom-crypto.refresh-config",
        "title": "Refresh Configuration",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "axiom",
          "title": "Axiom",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "axiom": [
        {
          "id": "axiom-circuits",
          "name": "Circuits"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "axiom-crypto.compile-all",
          "group": "navigation",
          "when": "view == axiom-circuits"
        },
        {
          "command": "axiom-crypto.configure-parameters",
          "group": "navigation",
          "when": "view == axiom-circuits"
        },
        {
          "command": "axiom-crypto.refresh-config",
          "group": "navigation",
          "when": "view == axiom-circuits"
        }
      ],
      "view/item/context": [
        {
          "command": "axiom-crypto.show-circuit-source",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == circuit"
        },
        {
          "command": "axiom-crypto.compile",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == circuit"
        },
        {
          "command": "axiom-crypto.show-default-input-source",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == defaultInputFile"
        },
        {
          "command": "axiom-crypto.update-circuit-default-input",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == defaultInputFile"
        },
        {
          "command": "axiom-crypto.rename-query",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == query"
        },
        {
          "command": "axiom-crypto.delete-query",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == query"
        },
        {
          "command": "axiom-crypto.run",
          "group": "inline@3",
          "when": "view == axiom-circuits && viewItem == query"
        },
        {
          "command": "axiom-crypto.send-query",
          "group": "inline@4",
          "when": "view == axiom-circuits && viewItem == query"
        },
        {
          "command": "axiom-crypto.add-query",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == queryHeader"
        },
        {
          "command": "axiom-crypto.show-input-source",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == inputFile"
        },
        {
          "command": "axiom-crypto.update-query-input",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == inputFile"
        },
        {
          "command": "axiom-crypto.update-query-callback",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == callbackAddress"
        },
        {
          "command": "axiom-crypto.update-query-refund",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == refundAddress"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "recompile": "rm -Rf out && yarn compile",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier src --write",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@axiom-crypto/circuit": "^0.1.3",
    "@axiom-crypto/client": "^0.1.3",
    "ethers": "^6.9.0"
  }
}
