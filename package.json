{
  "name": "axiom-crypto",
  "displayName": "Axiom Crypto",
  "description": "Support for projects built with Axiom, the ZK Coprocessor for Ethereum (https://axiom.xyz)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
				"id": "axiom",
				"title": "Axiom",
				"properties": {
					"axiomProviderUri": {
						"type": "string",
						"description": "Axiom Provider URI",
						"editPresentation": "singlelineText"
					},
          "axiomPrivateKey": {
						"type": "string",
						"description": "Axiom Private Key",
						"editPresentation": "singlelineText"
					},
          "axiomOutputFolder": {
						"type": "string",
						"description": "Axiom Output Folder",
						"editPresentation": "singlelineText"
					}
				}
			}
    ],
    "commands": [
      {
        "command": "axiom-crypto.compile",
        "title": "Compile Circuit",
        "icon": "$(circuit-board)"
      },
      {
        "command": "axiom-crypto.compile-all",
        "title": "Compile All Circuits",
        "icon": "$(circuit-board)"
      },
      {
        "command": "axiom-crypto.send-query",
        "title": "Send Axiom Query",
        "icon": "$(rocket)"
      },
      {
        "command": "axiom-crypto.show-circuit-source",
        "title": "View Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "axiom-crypto.run",
        "title": "Run Circuit",
        "icon": "$(run)"
      },
      {
        "command": "axiom-crypto.set-provider-uri",
        "title": "Configure Provider URI",
        "icon": "$(gear)"
      },
      {
        "command": "axiom-crypto.set-private-key",
        "title": "Configure Private Key",
        "icon": "$(key)"
      },
      {
        "command": "axiom-crypto.set-output-folder",
        "title": "Configure Output Folder",
        "icon": "$(output)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "axiom",
          "title": "Axiom",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "axiom": [
        {
          "id": "axiom-circuits",
          "name": "Circuits"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "axiom-crypto.compile-all",
          "group": "navigation",
          "when": "view == axiom-circuits"
        },
        {
          "command": "axiom-crypto.set-provider-uri",
          "group": "navigation",
          "when": "view == axiom-circuits"
        },
        {
          "command": "axiom-crypto.set-private-key",
          "group": "navigation",
          "when": "view == axiom-circuits"
        },
        {
          "command": "axiom-crypto.set-output-folder",
          "group": "navigation",
          "when": "view == axiom-circuits"
        }
      ],
      "view/item/context": [
        {
          "command": "axiom-crypto.show-circuit-source",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == circuit"
        },
        {
          "command": "axiom-crypto.compile",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == circuit"
        },
        {
          "command": "axiom-crypto.run",
          "group": "inline@1",
          "when": "view == axiom-circuits && viewItem == query"
        },
        {
          "command": "axiom-crypto.send-query",
          "group": "inline@2",
          "when": "view == axiom-circuits && viewItem == query"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@axiom-crypto/circuit": "^0.1.3",
    "@axiom-crypto/client": "^0.1.3",
    "ethers": "^6.9.0"
  }
}
